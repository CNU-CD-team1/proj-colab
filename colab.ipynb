      img_list.append(base64.b64decode(fixed_cut[1]))
      vote_num_list.append(fixed_cut[2])
      cut_prompt_list.append(fixed_cut[3])
      cut_order_list.append(fixed_cut[4])

    # 받아온 id값에 따른 제목 뜨는지 확인 완료
