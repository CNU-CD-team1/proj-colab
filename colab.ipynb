    #print(vote_num_list)
    #print(cut_prompt_list)
    #print(cut_order_list)

    cur.close()
    conn.close()

    return render_template('post_ing.html', ids=cut_no_list, images=img_list, votes =vote_num_list, prompts=cut_prompt_list, orders=cut_order_list, title=title, id=id)


